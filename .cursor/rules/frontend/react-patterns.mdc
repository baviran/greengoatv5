  const { user } = useAppAuth();
  const { activeThreadId } = useAppChat();
  
  if (!user) {
    return <AuthRequired />;
  }
  
  return (
    <div className="chat-interface">
      <ChatHeader />
      <MessageList threadId={activeThreadId} />
      <MessageInput />
    </div>
  );
};

